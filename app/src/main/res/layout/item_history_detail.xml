<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp60"
    android:background="@color/white"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_or_de_tv_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:textColor="@color/gray333"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="--" />
        <TextView
            android:id="@+id/item_or_de_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:layout_gravity="top"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp1"
            android:minLines="3"
            android:textColor="@color/gray999"
            android:text="--" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:orientation="vertical">
            <View
                android:id="@+id/item_or_de_top_line"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/grayeee"
                />
        <ImageView
            android:id="@+id/item_or_de_iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
           />
            <View
                android:id="@+id/item_or_de_bot_line"
                android:layout_width="0.5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/grayeee"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_or_de_tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp14"
                android:textColor="@color/gray333"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:text="--" />

            <TextView
                android:id="@+id/item_or_de_tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp1"
                android:gravity="center_vertical"
                android:minLines="3"
                android:text="--"
                android:textColor="@color/gray999"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>